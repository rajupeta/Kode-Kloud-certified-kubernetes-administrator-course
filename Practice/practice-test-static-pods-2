#make sure no options given after  -- sleep command otherwise all options like   --dry-run=client -o yaml will be added to sleep commmand 
#in case if you use kubectl run --restart=Never --image=busybox static-busybox --command -- sleep 1000 --dry-run=client -o yaml > static-busybox.yaml
